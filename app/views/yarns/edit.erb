<h2>Edit Yarn</h2>

<form class='wide' action='/yarns/<%= @yarn.id %>' method='post'>
    <input type='hidden' name='_method' value='patch'>
    <label for='name'>Brand Name: </label>
        <input type='text' name='name' value='<%= @yarn.name %>'><br>
    <label for='color'>Main Color: </label>
        <input type='text' name='color' value='<%= @yarn.color %>'><br>
    <label for='weight'>Yarn Weight: </label> 
        <input type='text' name='weight' value='<%= @yarn.weight %>'><br>
    <label for='fiber'>Fiber Content: </label>
        <input type='text' name='fiber' value='<%= @yarn.fiber %>'><br>
    <label for='num_of_skeins'>Number of Skeins</label>
        <input type='text' name='num_of_skeins' value='<%= @yarn.num_of_skeins %>'><br>
    <label for='yardage'>Yardage:</label>
        <input type='text' name='yardage' value='<%= @yarn.yardage %>'><br>
    <input class='button' type='submit' value='Update Yarn'>
</form>