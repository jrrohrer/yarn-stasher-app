<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>YarnStasherApp</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />

    <style>

      .topnav {
        background-color: #2f243a;
        overflow: hidden;
      }

      .topnav a {
        float: left;
        color: white;
        text-align: center;
        padding: 15px;
        text-decoration: none;
        font-size: 16px;
      }

      .topnav a:hover {
        background-color: #297373;
        color: white;
      }


      .botton {
        text-decoration: none;
        text-align: center;
        padding: 15px;
        display: inline-block;
        font-size: 14px;
      }

      body {
        background-color: #d7d6d6;
      }

      a {
        text-decoration: none;
        color: #297373;
      }

      a:hover {
        background-color: #c8c6d7;
      }

      table, th, td {
        border: 1px solid #297373;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th, td {
        text-align: left;
        padding: 10px;
      }

      tr:hover {
        background-color: #D7D6D6;
      }

      th {
        background-color: #2f243a;
        color: white;
      }

      .button {
        background-color: #2f243a;
        border: none;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 10px;
        border-radius: 6px;
        box-shadow: 0 4px 8px 0 #d7d6d6, 0 6px 12px 0 #c8c6c7;
      }

      form {
        display: inline-block;
      }

      .wide {
        width: 100%;
      }

      input[type=text], input[type=password] {
        width: 100%;
        padding: 10px 15px;
        margin: 10px 0;
        display: inline-block;
        border: 1px solid #c8c6d7;
        border-radius: 6px;
        box-sizing: border-box;
      }
    </style>
  </head>
  <body>

    <div class="topnav">
      <% if logged_in? %>
        <a href="/yarns">My Stash</a>
        <a href="/yarns/new">Add New Yarn</a>
        <a href="/logout">Log Out</a>
      <% end %>
    </div>
    
    <div class="wrapper">
        <% if flash[:message] %>
            <h4 style="color: #297373;"><%= flash[:message] %></h4>
        <% end %>
        <% if flash[:errors] %>
            <h4 style="color: red;"><%= flash[:errors] %></h4>
        <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>Yarn Stasher</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
